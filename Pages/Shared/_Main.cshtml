<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="shortcut icon" href="~/favicon.png">
    <link rel="stylesheet" href="~/lib/normalize.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="page">
    <div class="page__wrapper">
        <header class="header">
            <div class="container">
                <a class="link button button--primary" asp-area="" asp-page="/Create">Create new</a>
            </div>
        </header>
        <main class="main">
           @RenderBody()
        </main>
        <footer class="footer">
            <div class="container">
                <p class="text text--white"><span class="copyleft">&copy;</span> Copyleft. All rights not reserved.</p>
            </div>
        </footer>
    </div>
    <script src="~/js/main.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>