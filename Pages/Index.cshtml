@page
@model IndexModel
@using SiteClients.Model
@{
    ViewData["Title"] = "Main";
    Layout = "_Main";
}
 
<div class="remove-wrapper">

    <div class="remove-question">
        <p class="text remove-question__text">Really delete the item?</p>
        
            <form method="POST">
                <input class="deleteId" type="hidden" value="-1" name="deleteId">
                <div class="remove-question__bottom">
                <button class="button button--secondary remove" type="submit" asp-page-handler="delete">Delete</button>
                <button class="button button--secondary cancel" type="reset">Cancel</button>
                </div>
            </form>
             
        
    </div>

</div>
<section class="section">
    <div class="container">


@if(Model.Persons.Count == 0)
{
    <div class="not-items-wrapper">
        <div class="not-items">Items not Found.</div>
    </div>
}
else
{
    <ul class="list clients">
    @foreach(Person person in Model.Persons)
    {
         <li class="client-item" data-id="@person.Id">
            <span class="text--client">
                <span>@person.FirstName</span>
                <span>&nbsp;@person.LastName</span>
            </span>
            <span class="text--client">
                <span>@person.BirthDate.ToString()</span>
                <span class="text--client-sub">(@person.Age.ToString() лет)</span>
            </span>
            <span class="text--client">@person.Phone</span>
            <span class="text--client">@person.Email</span>
            <button class="button button--delete">
                <svg class="button__svg" width="800px" height="800px" viewBox="0 0 64 64"
                    xmlns="http://www.w3.org/2000/svg" stroke-width="3" stroke="#000000" fill="none">
                    <line x1="8.06" y1="8.06" x2="55.41" y2="55.94" />
                    <line x1="55.94" y1="8.06" x2="8.59" y2="55.94" />
                </svg>
            </button>
            <form method="post" >
                            <input class="editId" type="hidden" value="@person.Id" name="editId">
                            <button class="button button--edit" type="submit" asp-page-handler="edit">
                                <svg class="button__svg" width="800px" height="800px" viewBox="0 0 24 24" fill="none"
                                     xmlns="http://www.w3.org/2000/svg">
                                    <path d="M11 2H9C4 2 2 4 2 9V15C2 20 4 22 9 22H15C20 22 22 20 22 15V13"
                                          stroke="#292D32" stroke-width="1.5" stroke-linecap="round"
                                          stroke-linejoin="round" />
                                    <path d="M16.04 3.02001L8.16 10.9C7.86 11.2 7.56 11.79 7.5 12.22L7.07 15.23C6.91 16.32 7.68 17.08 8.77 16.93L11.78 16.5C12.2 16.44 12.79 16.14 13.1 15.84L20.98 7.96001C22.34 6.60001 22.98 5.02001 20.98 3.02001C18.98 1.02001 17.4 1.66001 16.04 3.02001Z"
                                          stroke="#292D32" stroke-width="1.5" stroke-miterlimit="10"
                                          stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M14.91 4.1499C15.58 6.5399 17.45 8.4099 19.85 9.0899" stroke="#292D32"
                                          stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round"
                                          stroke-linejoin="round" />
                                </svg>
                            </button>
                        </form>

         </li>


    }
    </ul>
}

    </div>
</section>
